                            {
                              "type": "combobox",
                              "id": "demoCombo",
                              "model": "demoModel",
                              "editable": "0",
                              "expand": "1"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
